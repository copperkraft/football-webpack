{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error", 4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "off"
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "space-infix-ops": [
            "error",
            {"int32Hint": false}
        ],
        "no-console": [
            "off"
        ],
        "object-shorthand": [
            "error",
            "always"
        ],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }]
    }
}